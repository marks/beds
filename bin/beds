#!/usr/bin/env ruby
require "#{File.dirname("FILE")}/../lib/beds"
require "#{File.dirname("FILE")}/../lib/cli"

## A bit of magic to call Beds::CLI::<CLI-Command>
if Beds::CLI.const_defined?(ARGV[0].capitalize.to_sym) then
  Beds::CLI.const_get(ARGV[0].capitalize.to_sym).send(:new,ARGV[1..-1])
  exit 0
else
  puts " Usage: #{File.basename($0)} [scaffold|new] [OPTIONS]"
  puts "   See #{File.basename($0)} scaffold --help or #{File.basename($0)} new --help foor more information"
  exit 1
end


